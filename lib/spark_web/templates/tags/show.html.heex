<h3>Topic: <%= @tag %></h3>
<%= for post <- @posts do %>
  <div id={post.id} style="margin-bottom: 3rem;">
    <h2>
      <%= link(post.title, to: Routes.blog_path(@conn, :show, post)) %>
    </h2>

    <%= raw(post.description) %>
    <p>
      <time><%= post.date %></time> Â· <SparkWeb.Components.TagsComponent.tags tags={post.tags} />
    </p>
  </div>
<% end %>
